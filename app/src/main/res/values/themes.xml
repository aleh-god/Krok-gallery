<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Krok" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryGreenBrand</item>
        <item name="colorPrimaryVariant">@color/primaryDarkGreenBrand</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryRedBrand</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkRedBrand</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/primaryLightYumaBrand</item>
        <item name="colorSurface">@color/primaryLightGreenBrand</item>
        <item name="colorOnBackground">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
    </style>
</resources>