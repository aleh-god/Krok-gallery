<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="by.godevelopment.kroksample.ui.deatails.DetailsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.deatails.DetailsFragment"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/header"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{viewModel.header}"
            tools:text="HEADER" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintDimensionRatio="w,1:1"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_stop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image"
            android:src="@drawable/ic_play_circle"
            />

        <ImageButton
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@+id/btn_play_pause"
            app:layout_constraintEnd_toStartOf="@+id/time_current"
            app:layout_constraintTop_toTopOf="@+id/btn_play_pause"
            app:layout_constraintBottom_toBottomOf="@+id/btn_play_pause"
            android:src="@drawable/ic_stop_circle"
            />

        <TextView
            android:id="@+id/time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintEnd_toStartOf="@+id/progress_time"
            app:layout_constraintStart_toEndOf="@+id/btn_stop"
            app:layout_constraintTop_toTopOf="@+id/btn_play_pause"
            app:layout_constraintBottom_toBottomOf="@+id/btn_play_pause"
            android:text="@{viewModel.currentTimeText}"
            tools:text="00:00" />

        <ProgressBar
            android:id="@+id/progress_time"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbarStyle="insideInset"
            app:layout_constraintTop_toTopOf="@+id/btn_play_pause"
            app:layout_constraintBottom_toBottomOf="@+id/btn_play_pause"
            app:layout_constraintEnd_toStartOf="@+id/time_total"
            app:layout_constraintStart_toEndOf="@+id/time_current"
            />

        <TextView
            android:id="@+id/time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@+id/btn_play_pause"
            app:layout_constraintBottom_toBottomOf="@+id/btn_play_pause"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/progress_time"
            android:text="@{viewModel.totalTimeText}"
            tools:text="10:00"
            />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_play_pause"
            android:text="@{viewModel.headerText}"
            tools:text="header text"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@{viewModel.text}"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_text"
            tools:text="@tools:sample/lorem/random"
            />

        <ProgressBar
            android:id="@+id/progress_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>